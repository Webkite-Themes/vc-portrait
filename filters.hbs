{{#if filterableFacets.length}}
<div class="webkite-filter-area">
  <div class="webkite-applied-filters">
      <button class="webkite-toggle" data-id="{{this.id}}" data-target=".filter-menu">filter<i></i></button>
      
      <ul class="filter-menu webkite-hide webkite-menu">
        {{#each filterableFacets type="enum"}}
        <li><span class="webkite-link">{{name}}</span>
          <ul class="filter-menu-child">
            {{#each values}}
            <li><a href="#" class="webkite-add-filter webkite-toggle" data-target=".filter-menu" data-facet="{{../name}}" data-operator="is" data-value="{{this}}">{{this}}</a></li>
            {{/each}}
          </ul>
        </li>
        {{/each}}
      </ul>
    <div class="current-filters">
      <a href="#" class="webkite-clear-filters"></a>
      <div class="filter-token-wrapper">{{#each filterGroups}}{{#if @first}}<span>by</span>{{/if}}<div class="filter-group-{{@index}}">{{#each filters}}<a href="#" class="webkite-remove-filter" data-facet="{{this.facet}}" data-operator="{{this.operator}}" data-value="{{this.value}}">{{this.value}}</a>{{#unless @last}}<span>or</span>{{/unless}}{{/each}}</div>{{#unless @last}}<span>and</span>{{/unless}}{{/each}}</div><!-- filter-token-wrapper -->
    </div><!-- current-filters -->
  </div>
</div><!-- webkite-filter-area -->
{{/if}}